
<h1><%= l :label_list_customers %></h1>

<table>
  <tr>
  </tr>

<% @customers.each do |customer| %>
  <tr>
  	<td><%= customer.name %></td>
    <td><%= link_to l(:button_show) , customer %></td>
    <td><%= link_to l(:button_edit), edit_customer_path(customer) %></td>
    <td><%= link_to l(:button_destroy), customer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to l (:field_new_customer) , new_customer_path %>