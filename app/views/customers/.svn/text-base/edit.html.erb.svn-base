<h1><%= l :label_editing_customer  %></h1>

<% form_for(@customer) do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "form", :object => f %>
  <p>
    <%= f.submit l :button_update %>
  </p>
<% end %>

<%= link_to l(:button_show), @customer %> |
<%= link_to l(:button_back), customers_path %>