<h1>Login</h1>

<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>
  <%= f.label t :field_login %><br />
  <%= f.text_field :login %><br />
  <br />
  <%= f.label t :field_password %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label t :field_remember_me %><br />
  <br />
  <%= f.submit t :button_login %>
<% end %>